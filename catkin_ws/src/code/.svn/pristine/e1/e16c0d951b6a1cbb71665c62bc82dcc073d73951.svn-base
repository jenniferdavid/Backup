<!-- Simple world with at spawn-->

<launch>

    <!-- Enable/disable visualization -->
    <arg name="rviz"  default="True" />
    <arg name="gazebo_gui"  default="True" />

<!--     Launch a world file -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="worlds/harbour_like.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="$(arg gazebo_gui)"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>  -->-->
    </include>
    
    <!-- Convert xacro to urdf and put it on parameter server -->
    <param  name="robot_description" 
            command="$(find xacro)/xacro.py $(find at_description)/urdf/at.xacro" />

    <!-- Spawn a robot into Gazebo (Gets robot_description from parameter server)-->
    <node name="spawn_urdf" 
          pkg="gazebo_ros" 
          type="spawn_model" 
          args="-param robot_description -urdf -model at -x 10 -y 10 -z 0.01" >
    </node>
          
    <!-- Run rviz node -->
    <group if="$(arg rviz)">
        <node   
            pkg="rviz" 
            type="rviz"
            name="rviz"         
            args="-d $(find at_gazebo)/rviz/at_on_ground_with_barrel.rviz">
        </node>
    </group>

</launch>
